<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">


    <LinearLayout
        android:id="@+id/llJobCriteria"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/activity_margin_small"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/tvJobDescription"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toLeftOf="@+id/ivRating"
                    android:layout_toStartOf="@+id/ivRating"
                    android:ellipsize="end"
                    android:maxLines="2"
                    android:text="Software Engineer"
                    android:textColor="@color/primary"
                    android:textSize="@dimen/text_size_extra_large"
                    android:textStyle="bold"/>

            <ImageView
                android:id="@+id/ivRating"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"
                android:src="@drawable/ic_unselect_rating"/>
        </RelativeLayout>
        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:stretchColumns="1">

            <TableRow
                android:layout_marginTop="@dimen/activity_margin_extra_small">
                <ImageView
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="@dimen/activity_margin_small"
                    android:layout_marginRight="@dimen/activity_margin_small"
                    android:padding="2dp"
                    android:src="@drawable/ic_hot"/>
                <TextView
                    android:id="@+id/tvCompanyName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:text="Actiknow Business Consulting Pvt Ltd"
                    android:textColor="@color/text_color_grey_dark"
                    android:textSize="@dimen/text_size_small"/>
            </TableRow>

            <TableRow>
                <ImageView
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="@dimen/activity_margin_small"
                    android:layout_marginRight="@dimen/activity_margin_small"
                    android:padding="2dp"
                    android:src="@drawable/ic_exp"/>
                <TextView
                    android:id="@+id/tvExperience"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:text="6 - 10 year"
                    android:textColor="@color/secondary_text"
                    android:textSize="@dimen/text_size_small"/>
            </TableRow>

            <TableRow>
                <ImageView
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="@dimen/activity_margin_small"
                    android:layout_marginRight="@dimen/activity_margin_small"
                    android:padding="2dp"
                    android:src="@drawable/ic_location"/>
                <TextView
                    android:id="@+id/tvLocation"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:text="Delhi"
                    android:textColor="@color/secondary_text"
                    android:textSize="@dimen/text_size_small"/>
            </TableRow>

            <TableRow>
                <ImageView
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="@dimen/activity_margin_small"
                    android:layout_marginRight="@dimen/activity_margin_small"
                    android:padding="2dp"
                    android:src="@drawable/ic_skill"/>
                <TextView
                    android:id="@+id/tvSkill"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:ellipsize="end"
                    android:maxLines="2"
                    android:text="c, c++, java, android, php, html"
                    android:textColor="@color/secondary_text"
                    android:textSize="@dimen/text_size_small"/>
            </TableRow>
        </TableLayout>
    </LinearLayout>
    <TextView
        android:id="@+id/tvRefer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/llJobCriteria"
        android:gravity="end"
        android:paddingLeft="@dimen/edittext_padding"
        android:paddingRight="20dp"
        android:text="Refer"
        android:textColor="@color/primary"
        android:textSize="@dimen/text_size_small"
        android:textStyle="bold"
        android:visibility="gone"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/tvRefer"
        android:layout_marginLeft="@dimen/activity_margin_small"
        android:layout_marginRight="@dimen/activity_margin_small"
        android:background="@color/divider"/>

</RelativeLayout>